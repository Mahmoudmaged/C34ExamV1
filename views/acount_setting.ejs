<%- include("shared/header") %> 


<body id="home">
<%- include("shared/navBar") %> 
 

    <div class="container mt-5 pt-5">
        <div class="row">
            <div class="col-md-8 m-auto card p-5">
                <div class="">
                    <h3>Account Setting</h3>
                    <hr>
                    <form action="/handelUpdatePassword" method="POST">
                        <input value="<%= oldInputs.oldPassword %>" name="oldPassword" placeholder="Enter Old Password" type="password" class="form-control my-2 <%= errors.find(data=>data.param=='oldPassword')||wrongPass=='true'?'is-invalid':'';%>">
                        <% if (errors.find(data=>data.param=='oldPassword') || wrongPass=='true') { %>
                            <div class="alert alert-danger text-center my-2">
                                <p>Invalid or wrong password </p>
                            </div>
                        <% } %>
                        <input value="<%= oldInputs.newPassword %>" name="newPassword" placeholder="New Password" type="password" class="form-control my-2 <%= errors.find(data=>data.param=='newPassword')?'is-invalid':'';%>">
                        <% if (errors.find(data=>data.param=='newPassword')) { %>
                            <div class="alert alert-danger text-center my-2">
                                <p>Invalid password</p>
                            </div>
                        <% } %>
                        <input value="<%= oldInputs.CPassword %>" name="CPassword" placeholder="Repeat Password" type="password" class="form-control my-2 <%= errors.find(data=>data.param=='CPassword')?'is-invalid':'';%>">
                        <% if (errors.find(data=>data.param=='newPassword')) { %>
                            <div class="alert alert-danger text-center my-2">
                                <p>confirm password must match new password</p>
                            </div>
                        <% } %>
                        <button type="submit" class="btn btn-info mt-3">Save Setting</button>
                    </form>
                </div>
            </div>
        </div>
    </div>




    <%- include("shared/footer") %> 
